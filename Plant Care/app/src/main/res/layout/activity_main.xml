<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/r" />



    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/black"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:shapeAppearance="@style/roundimageview1"
        app:srcCompat="@drawable/logo" />

    <ImageButton
        android:id="@+id/strawberry"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:contentDescription="Strawberry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17"
        app:srcCompat="@drawable/straberry" />

    <ImageButton
        android:id="@+id/cherry"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:contentDescription="Cherry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.845"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17"
        app:srcCompat="@drawable/cherry" />

    <ImageButton
        android:id="@+id/peach"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:contentDescription="Peach"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.615"
        app:srcCompat="@drawable/peach" />

    <ImageButton
        android:id="@+id/apple"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:contentDescription="Apple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.173"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.394"
        app:srcCompat="@drawable/apple" />

    <ImageButton
        android:id="@+id/pepper"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:contentDescription="Pepper"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.845"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.394"
        app:srcCompat="@drawable/pepper" />

    <ImageButton
        android:id="@+id/potato"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:contentDescription="Potato"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.845"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.615"
        app:srcCompat="@drawable/potato" />

    <ImageButton
        android:id="@+id/all"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:contentDescription="all"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.842"
        app:srcCompat="@drawable/all" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="84dp"
        android:layout_height="44dp"
        android:text="स्ट्रॉ बेरी"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/strawberry"
        app:layout_constraintEnd_toEndOf="@+id/strawberry"
        app:layout_constraintStart_toStartOf="@+id/strawberry"
        app:layout_constraintTop_toTopOf="@+id/strawberry" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="चेरी"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/cherry"
        app:layout_constraintEnd_toEndOf="@+id/cherry"
        app:layout_constraintStart_toStartOf="@+id/cherry"
        app:layout_constraintTop_toTopOf="@+id/cherry" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="सेब"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/apple"
        app:layout_constraintEnd_toEndOf="@+id/apple"
        app:layout_constraintStart_toStartOf="@+id/apple"
        app:layout_constraintTop_toTopOf="@+id/apple" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="मिर्च"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/pepper"
        app:layout_constraintEnd_toEndOf="@+id/pepper"
        app:layout_constraintStart_toStartOf="@+id/pepper"
        app:layout_constraintTop_toTopOf="@+id/pepper" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="आड़ू"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/peach"
        app:layout_constraintEnd_toEndOf="@+id/peach"
        app:layout_constraintStart_toStartOf="@+id/peach"
        app:layout_constraintTop_toTopOf="@+id/peach" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="आलू"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/potato"
        app:layout_constraintEnd_toEndOf="@+id/potato"
        app:layout_constraintStart_toStartOf="@+id/potato"
        app:layout_constraintTop_toTopOf="@+id/potato" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="श्रेणी के बारे में ज्ञान नहीं है"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/all"
        app:layout_constraintEnd_toEndOf="@+id/all"
        app:layout_constraintStart_toStartOf="@+id/all"
        app:layout_constraintTop_toTopOf="@+id/all" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="20dp"
        android:text="ऊपर दिए गए विकल्पों में से विकल्प चुनें"
        android:alpha="0.8"
        android:textColor="@color/black"
        android:background="@color/white"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>